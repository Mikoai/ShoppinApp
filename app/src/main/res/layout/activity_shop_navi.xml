<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop_navi">

    <ImageView
        android:id="@+id/shopImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/navigateBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/layout_sklep"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/navigateBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Naviage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/listBtn"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp"/>

    <Button
        android:id="@+id/listBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/listButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navigateBtn"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp" />



</androidx.constraintlayout.widget.ConstraintLayout>